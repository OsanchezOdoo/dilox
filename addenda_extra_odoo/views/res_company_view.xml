<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   <record id="view_res_company_addenda_extra" model="ir.ui.view">
      <field name="name">res.company.form.addenda.extra</field>
      <field name="model">res.company</field>
      <field name="inherit_id" ref="base.view_company_form" />
      <field name="arch" type="xml">
         <xpath expr="//field[@name='currency_id']" position="after">
            <group>             
                <field name="buyer_gln" />
                <field name="buyer_personOrDepartmentName_text" />
            </group>
           </xpath>
      </field>
   </record>   
</odoo>
